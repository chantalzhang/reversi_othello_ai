#!/bin/bash

get_agent_name() {
    local selection=$1
    case $selection in
        "minimax")
            echo "MiniMaxAgent"
            ;;
        "minimax_ab")
            echo "Minimax_with_alpha_beta_pruning"
            ;;
        "random")
            echo "random_agent"
            ;;
        "gpt")
            echo "gpt_greedy_corners_agent"
            ;;
        "student")
            echo "student_agent"
            ;;
        "human")
            echo "human_agent"
            ;;
        "chantal")
            echo "chantal_test_agent"
            ;;
        "actual_student")
            echo "actual_student"
            ;;
        "student2")
            echo "student_agent2"
            ;;
        *)
            echo "invalid"
            ;;
    esac
}

echo "Available agents:"
echo "- minimax"
echo "- minimax_ab"
echo "- random"
echo "- gpt"
echo "- student"
echo "- student2"
echo "- human"
echo "- chantal"
echo "- actual_student"
echo ""

# Player 1 selection
while true; do
    read -p "Player 1: " player1
    agent1=$(get_agent_name "$player1")
    if [ "$agent1" != "invalid" ]; then
        break
    else
        echo "No pick one on the list"
    fi
done

# Player 2 selection
while true; do
    read -p "Player 2: " player2
    agent2=$(get_agent_name "$player2")
    if [ "$agent2" != "invalid" ]; then
        break
    else
        echo "No pick one on the list"
    fi
done

# Run the game with selected agents
echo "Starting game: $agent1 vs $agent2"
python3 simulator.py --player_1 "$agent1" --player_2 "$agent2" --display
